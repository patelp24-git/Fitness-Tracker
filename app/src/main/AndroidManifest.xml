<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.fitnesscompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessCompanion">
       <activity android:name=".presentation.BmiCalculator"></activity>
        <activity android:name=".presentation.PersonalInformation" />
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.RegistrationPage" />
        <activity android:name=".presentation.LandingPage" />
        <activity android:name=".presentation.StepCounter" />

        <service android:name=".logic.StepCounter.StepCountService" />
    </application>

</manifest>